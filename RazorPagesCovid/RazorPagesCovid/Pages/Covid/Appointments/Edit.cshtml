            </div>
            <div class="form-group">
                <label asp-for="Apppointment.VaccineId" class="control-label"></label>
                <select asp-for="Apppointment.VaccineId" class="form-control" asp-items="ViewBag.VaccineId"></select>
                <span asp-validation-for="Apppointment.VaccineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
